# ========================================
# E-COMMERCE BACKEND TEST ENVIRONMENT
# ========================================

# ========================================
# APPLICATION CONFIGURATION
# ========================================
NODE_ENV=test
PORT=4003
APP_NAME=E-Commerce Backend Test
APP_VERSION=1.0.0

# ========================================
# DATABASE CONFIGURATION (TEST DATABASE)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=e_commerce_test
DB_SYNCHRONIZE=true
DB_LOGGING=false

# ========================================
# JWT CONFIGURATION
# ========================================
JWT_SECRET=test-jwt-secret-key-for-e2e-testing
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=test-refresh-secret-key-for-e2e-testing
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGIN=http://localhost:7000,http://localhost:4050,http://localhost:3000,http://localhost:4003
CORS_CREDENTIALS=true

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
UPLOAD_DEST=./test-uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ========================================
# EMAIL CONFIGURATION (Test Mode)
# ========================================
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=test
SMTP_PASS=test
MAIL_FROM_NAME=E-Commerce Test
MAIL_FROM_ADDRESS=test@example.com

# ========================================
# PUSHER CONFIGURATION (Test)
# ========================================
PUSHER_APP_ID=test-app-id
PUSHER_KEY=test-key
PUSHER_SECRET=test-secret
PUSHER_CLUSTER=ap2

# ========================================
# GOOGLE OAUTH2 CONFIGURATION (Test)
# ========================================
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4003/api/v1/auth/google/callback

# ========================================
# SECURITY CONFIGURATION
# ========================================
BCRYPT_ROUNDS=4
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=error
LOG_FILE=./logs/test.log

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================
DEBUG=false
SHOW_SQL_QUERIES=false

BASE_URL=http://localhost:4003

# ========================================
# FRONTEND URL
# ========================================
FRONTEND_URL=http://localhost:3000
