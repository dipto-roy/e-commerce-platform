# Production Environment Variables Template
# Copy this file and fill in your actual values
# DO NOT commit the filled version to git

# ==============================================
# DATABASE CONFIGURATION (Neon PostgreSQL)
# ==============================================
DB_HOST=your-project.neon.tech
DB_PORT=5432
DB_USERNAME=neondb_owner
DB_PASSWORD=your_neon_password_here
DB_DATABASE=neondb

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=production
PORT=4002

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_secure_random_string_here_min_32_characters
JWT_REFRESH_SECRET=generate_another_secure_random_string_here_min_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==============================================
# CORS CONFIGURATION
# ==============================================
# Add your Vercel frontend URL
CORS_ORIGIN=https://your-app.vercel.app,https://your-app-git-*.vercel.app

# ==============================================
# STRIPE CONFIGURATION
# ==============================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_or_sk_test_for_testing
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_or_pk_test
# Get from: https://dashboard.stripe.com/webhooks (after creating webhook)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# ==============================================
# PUSHER CONFIGURATION (Real-time Notifications)
# ==============================================
# Get from: https://dashboard.pusher.com
PUSHER_APP_ID=your_pusher_app_id
PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
PUSHER_CLUSTER=ap2

# ==============================================
# GOOGLE OAUTH (Optional)
# ==============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=https://your-backend.onrender.com/api/v1/auth/google/callback

# ==============================================
# EMAIL CONFIGURATION (Optional)
# ==============================================
# For Gmail, use App Password: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_FROM=noreply@yourdomain.com

# ==============================================
# OTP CONFIGURATION
# ==============================================
OTP_EXPIRY_MINUTES=10
OTP_LENGTH=6

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL=info
