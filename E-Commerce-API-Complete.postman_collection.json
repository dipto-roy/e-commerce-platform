            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"test_user\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!@#\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"+1234567890\",\n  \"role\": \"USER\"\n}"
            },
